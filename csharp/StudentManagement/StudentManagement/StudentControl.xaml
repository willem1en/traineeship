<UserControl x:Class="StudentManagement.StudentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StudentManagement"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Name="spStudentForm" Margin="5,5,5,5" Grid.ColumnSpan="2">
            <Label Content="First name" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding FirstName}"/>
            <Label Content="Last name" HorizontalAlignment="Left"/>
            <TextBox Text="{Binding LastName}"/>
            <Label Content="Date of birth" HorizontalAlignment="Left"/>
            <DatePicker SelectedDate="{Binding DateOfBirth}"/>
        </StackPanel>
    </Grid>
</UserControl>
