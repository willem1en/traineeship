<Window x:Class="StudentManagement.EditStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentManagement"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ResizeMode="NoResize"
        Title="Edit student" Height="300" Width="200">
    <Grid>
        <StackPanel>
            <local:StudentControl/>

            <Button Content="Save" Click="SaveStudent"></Button>
            <Button Content="Cancel" Click="Cancel"></Button>
        </StackPanel>

        

    </Grid>
</Window>
